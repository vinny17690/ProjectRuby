!!!
%html
%head
	%title Students and Teachers Open Discussion Platform
	= stylesheet_link_tag  	 'application', media: 'all', 'data-turbolinks-track' => true
	%link{"rel" => "stylesheet", href: "http://fonts.googleapis.com/css?family=Lato:300,400,700", type: "text/css"}
	%link{:rel => "stylesheet", :href => "https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css"}/
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags

%body
	%header.main_header.clearfix
		.wrapper
			#logo
				%p= link_to "College Open Forum", root_path
			#buttons
				-if user_signed_in?
					= link_to "New Post", new_post_path
					= link_to "Sign Out", destroy_user_session_path
				-else
					=link_to "Sign Up", new_user_registration_path
					=link_to "Sign In", new_user_session_path
	
	.wrapper
		%p.notice= notice
		%p.alert= alert

	.wrapper
		= yield
%footer
	%header.main_footer.clearfix
		.wrapper
			#logo
				%p All Rights Reserved to Team VSBHS
			#buttons
				=link_to "Facebook", "www.facebook.com"
				=link_to "Google+", "plus.google.com"
				=link_to "Twiiter", "www.twitter.com"
				=link_to "Linkedin", "www.linkedin.com"

